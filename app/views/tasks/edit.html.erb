<div class="container">
  <h1 class="display-4">Update Task</h1>
  <br>
  <%= form_with model: @task do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :details %>
    <%= f.text_field :details %>
    <%= f.submit %>
  <% end %>
  <br>
  <%= link_to "Cancel", tasks_path %>
</div>
